<div class="character-info {{#if selected}}fade-in-up{{/if}}">
    <div class="character-info-top">
        <form class="character-attrs">
            <div class="bar-wrapper">
                {{#if isPlayer}}
                <div class="attr">
                    <label>{{localize "LIGHTSOUTSD.luck"}}</label>
                    <span>{{luck}}</span>
                </div>
                {{/if}}

                <div class="attr">
                    <label>{{localize "LIGHTSOUTSD.ac"}}</label>
                    <span>{{armor}}</span>
                </div>
            </div>
        </form>

        <div class="character-picture">
            <img class="character-img" src="{{picture}}" alt="{{name}}" />

            <div class="sheet" data-character="{{id}}">
                {{localize "LIGHTSOUTSD.open_sheet"}}
            </div>

            <div class="character-level">
                <div class="character-level-badge"></div>
                <span>{{level}}</span>
            </div>
        </div>

        <div class="character-health">
            <div class="bar-wrapper">
                <div class="bar {{hp.status}}" style="width: {{hp.percent}}%"></div>

                <input type="text" id="current-health" data-value="{{hp.value}}" data-id="{{id}}" data-token={{isToken}}
                    value="{{hp.value}}" />
                <span class="divider">/</span>
                <input type="text" value="{{hp.max}}" disabled />
            </div>
        </div>

    </div>

    <div class="character-details">
        <div class="character-name">
            {{name}}
        </div>

        {{#unless settings.hide_title}}
        <div class="character-race-class">
            {{title}} {{class}}
        </div>
        {{/unless}}
    </div>
</div>